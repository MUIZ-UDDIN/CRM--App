# Environment Configuration
ENVIRONMENT=production

# Database Configuration - PostgreSQL (Update with your production database)
DATABASE_URL=postgresql+asyncpg://your_user:your_password@your_host:5432/your_database
DATABASE_URL_SYNC=postgresql://your_user:your_password@your_host:5432/your_database

# Redis Configuration (Update with your production Redis)
REDIS_URL=redis://your_redis_host:6379/0

# Security Configuration - CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_HOSTS=["your-domain.com", "www.your-domain.com"]
ALLOWED_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]

# Email Configuration (Optional - for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# External API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SendGrid Configuration (Optional - for emails)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=WARNING

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Background Tasks
CELERY_BROKER_URL=redis://your_redis_host:6379/1
CELERY_RESULT_BACKEND=redis://your_redis_host:6379/2

# AI Features
ENABLE_AI_FEATURES=true
AI_MODEL=gpt-3.5-turbo
